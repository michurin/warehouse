{
	"root": true,

	"extends": "eslint:all",

	"reportUnusedDisableDirectives": true,

	"parserOptions": {
		"ecmaVersion": 5
	},

	"env": {},

	"globals": {
		"$": true,
		"window": true
	},

	"rules": {
		"indent": ["error", 2],
		"max-len": ["error", 100],
		"max-statements": ["error", 16],
		"quotes": ["error", "single"],
		"max-lines-per-function": ["error", 256],
		"object-shorthand": ["error", "always", { "avoidQuotes": true }],
		"prefer-destructuring": ["error", {
      			"VariableDeclarator": {
        			"array": false,
       				"object": false
      			},
      			"AssignmentExpression": {
        			"array": false,
        			"object": false
      			}
    		}, {
      			"enforceForRenamedProperties": false
    		}],
		"brace-style": ["error", "1tbs", { "allowSingleLine": true }],
		"max-statements-per-line": ["error", { "max": 2 }],
		"line-comment-position": 0,
		"no-empty-function": 0,
		"object-property-newline": 0,
		"function-call-argument-newline": 0,
		"no-multi-assign": 0,
		"strict": 0,
		"no-var": 0,
		"one-var": 0,
		"padded-blocks": 0,
		"prefer-arrow-callback": 0,
		"no-inline-comments": 0,
		"no-plusplus": 0,
		"no-ternary": 0,
		"newline-per-chained-call": 0,
		"multiline-ternary": 0,
		"sort-keys": 0,
		"prefer-template": 0,

		"id-length": 0,
		"no-warning-comments": 0,
		"no-magic-numbers": 0,
		"vars-on-top": 0,
		"func-names": 0,
		"no-param-reassign": 0,
		"no-undefined": 0
	}
}
