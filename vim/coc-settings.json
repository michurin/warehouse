{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    },
    "intelephense": {
      "command": "intelephense",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "php"
      ],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    }
  }
}
